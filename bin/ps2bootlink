#!/bin/bash

ps2poweron

# hold down L1 for 10 seconds
irsend send_start ps2 KEY_PS2_L1
sleep 10
irsend send_stop ps2 KEY_PS2_L1

PIPE=$(mktemp -u)
mkfifo "$PIPE"
exec 3<>"$PIPE"
rm "$PIPE"

listen_thread() {
	ps2client -t 10 listen > >(tee >&3 /dev/stdout)
	return 1
}

listen_thread &
PS2CLIENTPID=$(jobs -p %+)

grep -m 1 'EE: Cmd thread' <&3 >/dev/null &
GREPPID=$(jobs -p %+)

if wait -n; then
	echo "PS2 has booted into PS2Link! Woop woop"
	kill $GREPPID
	kill $PS2CLIENTPID
	echo "Sleeping for a few seconds to let PS2Link finish starting"
	sleep 3
	exit 0
else
	echo "PS2 hasn't booted into PS2Link in 10 seconds, shutting it down."
	kill $GREPPID
	kill $PS2CLIENTPID
	ps2poweroff
	exit 1
fi

echo "Something weird has happened!"
exit 2
